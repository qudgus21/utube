mixin searchVideo(video={})
    .searchVideos
        a(href=`${routes.videoDetail(video.id)}`)
            video.video_thumnail(src=video.videoFile, controls=false)
            .videoDetail
                .video__title=video.title
                if video.views === 1
                    h6.videoBlock__views 1 view
                else
                    h6.videoBlock__views #{video.views} views
                .video__description=video.description              